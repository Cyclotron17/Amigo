<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/my_gradient_drawable"
    android:layout_height="match_parent"
    tools:context=".Diary">

    <TextView
        android:id="@+id/diary"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="right|center_vertical"
        android:lineSpacingExtra="-20sp"

        android:text="DIARY"
        android:textColor="#447DEB
"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/left_arrow"
        android:layout_width="43dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <View
        android:id="@+id/rectangle_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diary"/>

    <TextView
        android:id="@+id/th_july"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/roboto"
        android:gravity="right|center_vertical"
        android:lineSpacingExtra="-6sp"
        android:text="25TH JULY"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_2"
        app:layout_constraintStart_toStartOf="@+id/rectangle_2"
        app:layout_constraintTop_toTopOf="@+id/rectangle_2"
        app:layout_constraintVertical_bias="0.192" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Today was a good day"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto"

        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/th_july"
         app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/th_july"
        app:layout_constraintTop_toBottomOf="@+id/th_july" />

    <View
        android:id="@+id/rectangle_78"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diary"/>

    <TextView
        android:id="@+id/july_24th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/roboto"
        android:gravity="right|center_vertical"
        android:lineSpacingExtra="-6sp"
        android:text="25TH JULY"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_2"
        app:layout_constraintStart_toStartOf="@+id/rectangle_2"
        app:layout_constraintTop_toTopOf="@+id/rectangle_2"
        app:layout_constraintVertical_bias="0.192" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Today was a good day"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto"

        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/th_july"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/th_july"
        app:layout_constraintTop_toBottomOf="@+id/th_july" />


</androidx.constraintlayout.widget.ConstraintLayout>